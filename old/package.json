{
  "name": "d2l-assignment-extractor",
  "version": "1.0.0",
  "description": "D2L Assignment Extractor - Process Canvas quiz submissions",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:win:dir": "electron-builder --win --dir --config.win.sign=null",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "d2l",
    "canvas",
    "quiz",
    "grading"
  ],
  "author": "Chase",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.d2l.assignmentextractor",
    "productName": "D2L Assignment Extractor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "!react-frontend/build",
      "react-frontend/build/**/*",
      "react-frontend/src/**/*",
      "react-frontend/public/**/*",
      "react-frontend/package.json",
      "react-frontend/package-lock.json",
      "renderer/**/*",
      "scripts/**/*",
      "process_quiz_cli.py",
      "process_completion_cli.py",
      "extract_grades_cli_fixed.py",
      "extract_grades_cli.py",
      "extract_grades_simple.py",
      "grade_parser.py",
      "grading_processor.py",
      "helper_cli.py",
      "ocr_utils.py",
      "split_pdf_cli.py",
      "config_reader.py",
      "cleanup_data_cli.py",
      "requirements.txt",
      "package.json"
    ],
    "asarUnpack": [
      "*.py",
      "requirements.txt"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "D2L Assignment Extractor",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "menuCategory": "Education"
    },
    "publish": null,
    "afterPack": "scripts/after-pack.js"
  }
}
